<h3><%= Spree.t(:volume_prices) %></h3>
<table class="table">
  <thead>
    <tr>
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:discount_type) %></th>
      <th><%= Spree.t(:range) %></th>
      <th><%= Spree.t(:amount) %></th>
      <th><%= Spree.t(:position) %></th>
      <th><%= Spree.t(:action) %></th>
    </tr>
  </thead>
  <tbody id="volume_prices">
    <%= f.fields_for :volume_prices do |vp_form| %>
      <%= render 'spree/admin/volume_prices/volume_price_fields', :f => vp_form %>
    <% end %>
  </tbody>
</table>
<%= button_link_to Spree.t(:add_volume_price), "javascript:;", { :icon => 'add', :'data-target' => "tbody#volume_prices", :class => 'btn-success spree_add_fields' } %>
<br/><br/>
